<!-- Sign up -->

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="signin-box">
    <div class="form-inputs">
    	<%= f.input :name, required: true, autofocus: true, label: false, placeholder: "Name" %>
      <%= f.input :email, required: true, label: false, placeholder: "Email" %>
      <%= f.input :password, required: true, label: false, placeholder: "Password" %>
      <%= f.input :password_confirmation, required: true, label: false, placeholder: "Passwrod Confirmation" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "secondary small button" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
