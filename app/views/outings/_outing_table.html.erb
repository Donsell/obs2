<div class="row">
  <div class="small-1 columns">Date</div>
  <div class="small-1 columns">Time</div>
  <div class="small-4 columns">Site</div>
  <div class="small-1 columns">Seeing</div>
  <div class="small-1 columns">Trans</div>
  <div class="small-1 columns">NELM</div>
  <div class="small-3 columns">&nbsp</div>
</div>
<% @outings.each do |outing| %>
  <div class="row">
    <div class="small-1 columns"><%= outing.outing_date.strftime("%y/%m/%d") %></div>
    <div class="small-1 columns"><%= outing.outing_time.strftime("%H:%M") %></div>
    <div class="small-4 columns"><%= outing.site.name %></div>
    <div class="small-1 columns"><%= outing.seeing %></div>
    <div class="small-1 columns"><%= outing.limiting_magnatude %></div>
    <div class="small-1 columns"><%= outing.transparancy %></div>
    <div class="small-1 columns">&nbsp</div>
    <div class="small-1 columns"><%= link_to 'Edit', edit_outing_path(outing) %></div>
    <div class="small-1 columns"><%= link_to 'Destroy', outing, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>
  <div class="row">
    <div class="small-12 columns"><%= outing.description %></div>
  </div>
<div class="row">&nbsp</div>
<% end %>
