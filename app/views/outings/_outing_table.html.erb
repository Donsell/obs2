<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Outing date</th>
      <th>Outing time</th>
      <th>Site</th>
      <th>Seeing</th>
      <th>Limiting magnatude</th>
      <th>Transparancy</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @outs = Array.new %>
  <%  unless @outings.respond_to?(:each) %>
    <% @outs[0] = @outings %>
   <% else %>
     <% @outs = @outings %>
  <% end -%>

  <tbody>
    <% @outs.each do |outing| %>
      <tr>
        <td><%= outing.user_id %></td>
        <td><%= outing.outing_date %></td>
        <td><%= outing.outing_time.strftime("%H:%M") %></td>
        <td><%= outing.site_id %></td>
        <td><%= outing.seeing %></td>
        <td><%= outing.limiting_magnatude %></td>
        <td><%= outing.transparancy %></td>
        <td><%= outing.description %></td>
        <td><%= link_to 'Show', outing %></td>
        <td><%= link_to 'Edit', edit_outing_path(outing) %></td>
        <td><%= link_to 'Destroy', outing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
