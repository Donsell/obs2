
  <%= simple_form_for(@site) do |f| %>
  <%= f.error_notification %>
<% if @site.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@site.errors.count, "error" ) %> prohibited this site from being saved.</h2>
    <ui>
      <% @site.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ui>
  </div>
<% end %>
  <div class="form-inputs">

    <%= f.input :user_id ,:as => :hidden, :input_html => {:value => current_user.id } %>
    <div class="row">
      <div class="small-8 columns">
        <%= f.text_field :name, required: true, autofocus: true, label: false, placeholder: "Site Name" %>
      </div>
      <div class="small-4 columns">
        <%= f.input :location_type_id, label: false, placeholder: "Location Type", collection: Site::LOCATION_TYPES.sort.map {|k,v| [v,k]} %>
      </div>
      </div>

    <div class="row">
      <div class="small-6 columns">
        <%= f.input :latitude, label: false, placeholder: "Latitude" %>
      </div>
      <div class="small-6 columns">
        <%= f.input :longitude, label: false, placeholder: "Longitude" %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <%= f.input :description, label: false, placeholder: "Description" %>
      </div>
    </div>
    <div class="form-actions">
      <div class="small-3 columns">
        <%= f.button :submit, class: "secondary small button" %>
      </div>
    </div>
    </div>
  <% end %>
