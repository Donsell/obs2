<%= simple_form_for(@site) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :user_id %>

    <%= f.input :name %>

    <%= f.input :latitude %>

    <%= f.input :longitude %>

    <%= f.input :description %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
