<%= simple_form_for(@site) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :user_id ,:as => :hidden, :input_html => {:value => current_user.id } %>

    <%= f.input :name %>

    <%= f.collection_select(:location_type_id, LocationType.all, :id, :name) %>

    <%= f.input :latitude %>

    <%= f.input :longitude %>

    <%= f.input :description %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
