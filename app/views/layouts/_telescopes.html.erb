
<table>
  <tr>
    <thead>
      <th>Make</th>
      <th>Model</th>
      <th>Focal length</th>
      <th>F ratio</th>
      <th>Diameter</th>
      <th>Own?</th>
      <th colspan="3"></th>
    </thead>
  </tr>
  <% @user.telescopes.each do |telescope| %>
  <tr>
    <td><%= telescope.make %></td>
    <td><%= telescope.model %></td>
    <td><%= telescope.focal_length %></td>
    <td><%= telescope.f_ratio %></td>
    <td><%= telescope.diameter %></td>
    <% if telescope.current == true %>
      <td>Yes</td>
    <% else %>
      <td>No</td>
    <% end %>
    <td><%= link_to 'Edit', edit_telescope_path(telescope), class: "tabular small button" %></td>
    <td><%= link_to 'Delete', telescope, method: :delete, data: { confirm: 'Are you sure?' }, class: "tabular small button" %></td>
  </tr>
  <% end %>
</table>
